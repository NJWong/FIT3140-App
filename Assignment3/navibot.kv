#:kivy 1.8

<NaviBot>:
	naviprogram: naviprogram
	navicontrols: navicontrols
	naviblocks: naviblocks

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			orientation: 'horizontal'

			ScreenManager:
				id: screen_manager
				#size_hint: 1, 0.9
				
				Screen:
					name: 'programming'

					GridLayout:
						cols: 2

						# NaviBlocks
						NaviBlocks:
							move_block: move_block
							turn_block: turn_block
							id: naviblocks
							orientation: 'vertical'
							cols: 3
							rows: 3

							ProgramBlock:
								id: move_block
								text: 'MOVE'

							ProgramBlock:
								id: turn_block
								text: 'TURN'

						# NaviProgram
						NaviProgram:
							id: naviprogram
							Label:
								text: 'program area'

				Screen:
					name: 'maze'

					GridLayout:
						cols: 2

						NaviControls:
							id: navicontrols
							size_hint: 0.15, 1
							orientation: 'vertical'

							RunButton:
								id: run_button
								text: 'RUN'
								on_press: naviprogram.run_program()

							StopButton:
								id: stop_button
								text: 'STOP'
								on_press: naviprogram.stop_program()

						# NaviMaze
						Button:
							text: 'NaviMaze'

		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.1

			# Screen Controller
			Button:
				text: 'Programming'
				on_press:
					screen_manager.transition.direction = 'right'
					screen_manager.current = 'programming'

			Button:
				text: 'Maze'
				on_press:
					screen_manager.transition.direction = 'left'
					screen_manager.current = 'maze'