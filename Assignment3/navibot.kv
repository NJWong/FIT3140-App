#:kivy 1.8

<RunButton>:
	text: 'RUN'

<StopButton>:
	text: 'STOP'

<NaviControls>:
	run_button: run_button
	stop_button: stop_button

	BoxLayout:
		orientation: 'vertical'

		RunButton
			id: run_button
			on_press: root.run_button_touched()

		StopButton:
			id: stop_button
			on_press:
				root.stop_button_touched()

<NaviProgram>:
	Label:
		text: 'program area'

<NaviBot>:
	navicontrols: navicontrols
	naviprogram: naviprogram

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			orientation: 'horizontal'

			ScreenManager:
				id: screen_manager
				#size_hint: 1, 0.9
				
				Screen:
					name: 'programming'

					GridLayout:
						cols: 2

						# NaviBlocks
						Button:
							text: 'NaviBlocks'

						# NaviProgram
						NaviProgram:
							id: naviprogram

				Screen:
					name: 'maze'

					GridLayout:
						cols: 2

						# NaviControls
						NaviControls:
							id: navicontrols
							size_hint: 0.15, 1

						# NaviMaze
						Button:
							text: 'NaviMaze'
							on_press: naviprogram.run_program()

		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.1

			# Screen Controller
			Button:
				text: 'Programming'
				on_press:
					screen_manager.transition.direction = 'right'
					screen_manager.current = 'programming'

			Button:
				text: 'Maze'
				on_press:
					screen_manager.transition.direction = 'left'
					screen_manager.current = 'maze'